---
export interface Props {
  url: string;
  username: string;
  siteName: string;
}

const { url, username, siteName } = Astro.props;
---

<div
  class="w-full bg-green-light/10 border border-primary/40 px-2 py-2 flex items-center gap-2 rounded-md"
>
  <img src="web.svg" alt="internet icon" width="30" />
  <div class="flex flex-col">
    <span class="text-white font-normal text-sm">{siteName}</span>
    <span class="text-white/50 font-normal text-sm">{username}</span>
    <a href={url} target="_blank" class="text-blue-400 underline text-xs">{url}</a>
  </div>
</div>
